<%- layout("/boilerplate/boilerplate")%>
    <h1>All Notes</h1>
    <a href="notes/new"><button>New</button></a>
    <% for (let page of pages) {%>
        <div>
            <h1>
                <a href="/notes/<%=page._id%>">
                    <%= page.topic%>
                </a>
            </h1>
            <ul>
                <% for (let i=0; i <page.notes.length; i++) {%>
                    <li>
                        <%=page.notes[i].note%>
                    </li>
                    <% } %>
            </ul>
        </div>
        <% } %>