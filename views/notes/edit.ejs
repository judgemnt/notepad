<%- layout("/boilerplate/boilerplate")%>
    <div class="container mt-3">
        <form action="/notes/<%=info._id%>?_method=PUT" method="POST">
            <label for="topic">Topic:</label>
            <input type="text" name="topic" id="topic" value="<%=info.topic%>">
            <h1>Notes:</h1>
            <% info.notes.forEach(function(note,i) { %>
                <label for="<%=note._id%>"></label>
                <textarea name="note" id="<%=note._id%>" cols="50" rows="5"
                    value="<%=note._id%>"><%=note.note%></textarea>
                <br>
                <% }) %>
                    <button>Submit</button>
        </form>
    </div>